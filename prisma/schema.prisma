generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Job {
  id          Int      @id @default(autoincrement())
  company     String
  position    String
  dateApplied DateTime
  status      String   // Pending, Interviewing, Offer, Rejected
  notes       String?
  createdAt   DateTime @default(now())
}