generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
  // Hardcoding the relative path ensures the engine finds it every time
  url      = "file:./dev.db"
}

model Job {
  id          Int      @id @default(autoincrement())
  company     String
  position    String
  dateApplied String
  status      String
  notes       String?
  createdAt   DateTime @default(now())
}